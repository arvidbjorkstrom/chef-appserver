APP_ENV=<%= @site['environment'] %>
APP_KEY=<%= @site['appkey'] %>
APP_DEBUG=<%= @site['db_connection'] ? 'true' : 'false' %>
<% if @site['apploglevel'] -%>
APP_LOG_LEVEL=<%= @site['apploglevel'] %>
<% end -%>
APP_URL=<%= @site['name'] %>

DB_CONNECTION=<%= @site['db_connection'] ? @site['db_connection'] : 'mysql' %>
DB_HOST=<%= @site['db_host'] %>
DB_PORT=<%= @site['db_port'] ? @site['db_port'] : '3306' %>
DB_DATABASE=<%= @site['db_database'] %>
DB_USERNAME=<%= @site['db_username'] %>
DB_PASSWORD=<%= @site['db_password'] %>

CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_DRIVER=sync

<% if @site['broadcast_driver'] -%>
BROADCAST_DRIVER=<%= @site['broadcast_driver'] %>
<% end -%>
CACHE_DRIVER=<%= @site['cache_driver'] ? @site['cache_driver'] : 'file' %>
SESSION_DRIVER=<%= @site['session_driver'] ? @site['session_driver'] : 'file' %>
QUEUE_DRIVER=<%= @site['queue_driver'] ? @site['queue_driver'] : 'sync' %>

<% if @site['redis_host'] -%>
REDIS_HOST=<%= @site['redis_host'] %>
<% end -%>
<% if @site['redis_password'] -%>
REDIS_PASSWORD=<%= @site['redis_password'] %>
<% end -%>
<% if @site['redis_port'] -%>
REDIS_PORT=<%= @site['redis_port'] %>
<% end -%>

MAIL_DRIVER=<%= @site['mail_driver'] ? @site['mail_driver'] : 'smtp' %>
MAIL_HOST=<%= @site['mail_host'] ? @site['mail_host'] : 'mailtrap.io'%>
MAIL_PORT=<%= @site['mail_port'] ? @site['mail_port'] : '2525' %>
MAIL_USERNAME=<%= @site['mail_username'] ? @site['mail_username'] : 'null' %>
MAIL_PASSWORD=<%= @site['mail_password'] ? @site['mail_password'] : 'null' %>
<% if @site['mail_encryption'] -%>
MAIL_ENCRYPTION=<%= @site['mail_encryption'] %>
<% end -%>

<% if @site['pusher_key'] -%>
PUSHER_KEY=<%= @site['pusher_key'] %>
<% end -%>
<% if @site['pusher_secret'] -%>
PUSHER_SECRET=<%= @site['pusher_secret'] %>
<% end -%>
<% if @site['pusher_app_id'] -%>
PUSHER_APP_ID=<%= @site['pusher_app_id'] %>
<% end -%>

<% if @site['env_content'].length -%>
<%= @site['env_content'].map {|e| e.join('=') }.join("\n") %>
<% end -%>
